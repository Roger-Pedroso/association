<%= link_to "< Voltar", people_path, class: 'btn btn-secondary btn-sm' %>
<%= render @person %>
<%= link_to 'Editar', edit_person_path(@person), class: "btn btn-primary mb-2" %>
<%= button_to "Remover", @person, method: :delete, class: 'btn btn-danger' %>
<h2 class="mt-4">Auditoria</h2>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>User Type</th>
        <th>Username</th>
        <th>Action</th>
        <th>Audited Changes</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% @audits.each do |audit| %>
        <tr>
          <td><%= audit.user_type %></td>
          <td><%= audit.username %></td>
          <td><%= audit.action %></td>
          <td><%= JSON.pretty_generate(audit.audited_changes) %></td>
          <td><%= audit.created_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>